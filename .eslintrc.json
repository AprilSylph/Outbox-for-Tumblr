{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true
  },
  "extends": [
    "semistandard"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "overrides": [
    {
      "files": ["src/lib/npf.js"],
      "rules": {
        "camelcase": "off",
        "no-cond-assign": "off",
        "no-extend-native": "off"
      }
    }
  ],
  "ignorePatterns": [
    "*.min.js"
  ]
}
